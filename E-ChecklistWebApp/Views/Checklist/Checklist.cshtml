@model E_ChecklistWebApp.Controllers.ChecklistModel

@{
    ViewBag.Title = "Checklist";
   
}

<link href="~/css/styles-checklist.css" rel="stylesheet" />
<div class="container mt-5 pt-5">
    <h1 class="text-center text-custom">Checklists for @Model.processName </h1>

    <div class="row mt-4">
        <div class="col-md-12">
            <input type="text" id="searchBar" class="form-control mb-4" placeholder="Search checklists...">
        </div>
    </div>

    <div class="row mt-4 fade-in-section">
        @foreach (var checklist in Model.eChecklistChecklistDetails)
        {
            <div class="col-md-12 checklist-card" data-title="@checklist.ChecklistName">
                <div class="card bg-dark text-white mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@checklist.ChecklistName</h5>
                        <p class="card-text">@checklist.Description</p>
                        <p class="card-text"><strong>Period:</strong> @checklist.Period</p>
                        <p class="card-text"><strong>Active:</strong> @checklist.ActiveFlag</p>
                        @Html.ActionLink("Go to Checklist", "checklistEntry", "checklistEntry", new { ChecklistId = checklist.IdChecklist , ChecklistName = checklist.ChecklistName , ChecklistDescription = checklist.Description , Checklistdate = checklist.CreateDate , ProcessId = Model.processId}, new { @class = "btn btn-secondary ml-2" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>