
@{
    ViewBag.Title = "checklistEntry";
}
<link href="~/css/styles-checklist-entry.css" rel="stylesheet" />
<div class="container mt-5 pt-5">
    <h1 class="text-center text-custom" id="checklistName">Checklist Name</h1>

    <ul class="nav nav-tabs mt-4" id="checklistTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="entry-data-tab" data-bs-toggle="tab" href="#entry-data" role="tab" aria-controls="entry-data" aria-selected="true">Entry Data</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="checklist-detail-tab" data-bs-toggle="tab" href="#checklist-detail" role="tab" aria-controls="checklist-detail" aria-selected="false">Checklist Detail</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="historical-tab" data-bs-toggle="tab" href="#historical" role="tab" aria-controls="historical" aria-selected="false">Historical</a>
        </li>
    </ul>

    <div class="tab-content mt-4" id="checklistTabContent">
        <div class="tab-pane fade show active" id="entry-data" role="tabpanel" aria-labelledby="entry-data-tab">
            <form id="checklistForm">
                <ul class="list-group" id="checklistItems">
                    <li class="list-group-item bg-dark text-white">
                        <div class="form-group">
                            <label for="item-1">Checklist Item 1</label>
                            <input type="text" class="form-control mb-3" id="item-1" name="item-1" placeholder="Enter value for item 1">
                        </div>
                    </li>
                    <li class="list-group-item bg-dark text-white">
                        <div class="form-group">
                            <label for="item-2">Checklist Item 2</label>
                            <input type="text" class="form-control mb-3" id="item-2" name="item-2" placeholder="Enter value for item 2">
                        </div>
                    </li>
                    <li class="list-group-item bg-dark text-white">
                        <div class="form-group">
                            <label for="item-3">Checklist Item 3</label>
                            <input type="text" class="form-control mb-3" id="item-3" name="item-3" placeholder="Enter value for item 3">
                        </div>
                    </li>
                    <!-- Add more checklist items as needed -->
                </ul>
                <button type="submit" class="btn btn-primary btn-block mt-4 w-100">Submit</button>
            </form>
        </div>

        <div class="tab-pane fade" id="checklist-detail" role="tabpanel" aria-labelledby="checklist-detail-tab">
            <div class="bg-dark text-white p-4">
                <p id="checklistDescription">Checklist Description</p>
                <p><strong>Created Date:</strong> <span id="createDate">YYYY-MM-DD</span></p>
                <!-- Add more checklist details as needed -->
            </div>
        </div>

        <div class="tab-pane fade" id="historical" role="tabpanel" aria-labelledby="historical-tab">
            <div class="bg-dark text-white p-4">
                <h5>Historical Data</h5>
                <!-- Add historical data content as needed -->
                <p>Previous entry 1: <span>Data</span></p>
                <p>Previous entry 2: <span>Data</span></p>
                <p>Previous entry 3: <span>Data</span></p>
            </div>
        </div>
    </div>
</div>