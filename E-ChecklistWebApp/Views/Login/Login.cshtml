@{
    ViewBag.Title = "Login";
}

<link href="~/css/styles-signin.css" rel="stylesheet">
<div class="container-fluid">
    <div class="row g-0">
        <div class="col-md-6 d-none d-md-flex bg-image fade-in-section"></div>
        <div class="col-md-6 bg-light">
            <div class="login d-flex align-items-center py-5">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-10 col-xl-7 mx-auto fade-in-section">
                            <h3 class="display-4 header-div">E-Checklist Login</h3>
                            <form>
                                <div class="form-group mb-3">
                                    <input id="inputText" type="text" placeholder="Employee Number" required autofocus class="form-control rounded-pill border-0 shadow-sm px-4">
                                </div>
                                <div class="form-group mb-3">
                                    <input id="inputPassword" type="password" placeholder="Password" required class="form-control rounded-pill border-0 shadow-sm px-4 text-primary">
                                </div>
                                <div class="form-group mb-3">
                                    <button type="submit" class="btn btn-primary w-100 text-uppercase mb-2 rounded-pill shadow-sm">Login</button>
                                </div>
                                <div class="text-center d-flex justify-content-between mt-4">
                                    <p><a href="#" class="text-muted">Forgot Password?</a></p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
